{% macro upcoming_event(event) -%}
    <style>
        .event-card .btn {
            width: fit-content;
        }

        /* ===== UPCOMING EVENT CARD (scoped) ===== */
        .event-card {
            display: flex;
            gap: 1rem;
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 8px 24px rgba(0,0,0,0.06);
            overflow: hidden;
            height: 100%;
        }

        /* contenu texte : 40% */
        .event-card__content {
            flex: 0 0 40%;
            padding: 1.25rem 1rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
            gap: 0.5rem;
        }

        /* zone illustration : 60% */
        .event-card__image {
            flex: 1 1 60%;
            background: linear-gradient(135deg, #f3f6ff 0%, #f7f2ff 100%);
            /* Remplacer par background-image: url('/assets/images/xxx.jpg'); plus tard */
            background-size: cover;
            background-position: center;
            min-height: 220px;
        }

        /* texte */
        .event-emoji { font-size: 2rem; margin-bottom: 0.25rem; }
        .event-title { font-size: 1.25rem; margin: 0 0 0.25rem; color: #2c3e50; }
        .event-meta { color: #7f8c8d; font-size: 0.9rem; margin-bottom: 0.5rem; }
        .event-desc { color: #555; line-height: 1.45; margin-bottom: 0.75rem; }

        /* responsive */
        @media (max-width: 880px) {
            .event-card__content { flex: 0 0 45%; padding: 1rem; }
            .event-card__image { min-height: 180px; }
        }
        @media (max-width: 640px) {
            .event-card { flex-direction: column; }
            .event-card__content { flex: 0 0 auto; padding: 1rem; }
            .event-card__image { flex: 0 0 auto; height: 180px; }
        }
    </style>

    <article class="event-card">
        <div class="event-card__content">
            <div class="event-emoji" aria-hidden="true">{{ event.emoji }}</div>
            <h3 class="event-title">{{ event.title }}</h3>
            <div class="event-meta">
                <time datetime="{{ event.date }}">{{ event.date | date }}</time>
                {% if event.location %} â€” <span class="event-location">{{ event.location }}</span>{% endif %}
            </div>
            <p class="event-desc">{{ event.descr }}</p>
            {% if event.href %}
                <a class="btn" href="{{ event.href }}">En savoir plus</a>
            {% endif %}
        </div>

        <div class="event-card__image" role="img" aria-label="Illustration pour {{ event.title }}">
            {% if event.image %}
                <img src="{{ event.image }}" alt="Illustration pour {{ event.title }}" style="width:100%; height:100%; object-fit:cover;"/>
            {% endif %}
        </div>
    </article>
{% endmacro -%}