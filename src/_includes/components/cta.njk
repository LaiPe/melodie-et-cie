{% macro cta(
    title="Prêt à commencer votre projet musical ?",
    description="Contactez-nous dès aujourd'hui pour discuter de vos besoins et découvrir comment nous pouvons vous aider à réaliser vos rêves musicaux.",
    buttonText="Commencer maintenant",
    buttonUrl="/contact",
    cssClass="section cta-section",
    buttonClass="btn cta-btn"
) -%}

<style>
    /* ===== CTA SECTION ===== */
    .cta-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 4rem;
        border-radius: 15px;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

    .cta-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="dots" width="20" height="20" patternUnits="userSpaceOnUse"><circle cx="10" cy="10" r="1" fill="%23ffffff" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23dots)"/></svg>');
    }

    .cta-content {
        position: relative;
        z-index: 1;
    }

    .cta-section h2 {
        font-size: 2.5rem;
        margin-bottom: 1.5rem;
    }

    .cta-section p {
        font-size: 1.2rem;
        margin-bottom: 2rem;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
        opacity: 0.9;
    }

    .cta-btn {
        background: white;
        color: #667eea;
        font-weight: bold;
    }

    /* ===== RESPONSIVE CTA ===== */
    @media (max-width: 768px) {
        .cta-section {
            padding: 3rem 2rem;
        }
        
        .cta-section h2 {
            font-size: 2rem;
        }
    }

    @media (max-width: 480px) {
        .cta-section {
            padding: 2rem 1rem;
        }
    }
</style>

<section class="{{ cssClass }}">
    <div class="cta-content">
        <h2>{{ title }}</h2>
        <p>{{ description }}</p>
        <a href="{{ buttonUrl }}" class="{{ buttonClass }}">{{ buttonText }}</a>
    </div>
</section>
{%- endmacro %}