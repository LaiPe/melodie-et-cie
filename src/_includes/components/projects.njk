{% macro projects(columns=3, cards=[]) -%}
  <style>
  /* ===== PROJECTS GRID (scoped) ===== */
  .proj-grid {
    display: grid;
    gap: 1.25rem;
    grid-template-columns: repeat(var(--cols, 3), minmax(220px, 1fr));
    align-items: start;
  }

  .proj-card {
    background: #fff;
    padding: 1.25rem;
    border-radius: 12px;
    box-shadow: 0 6px 20px rgba(0,0,0,0.06);
    text-align: left;
    position: relative;
    overflow: hidden;
  }

  .proj-card__emoji {
    font-size: 2.25rem;
    display: inline-block;
    margin-bottom: 0.5rem;
  }

  .proj-card__title {
    font-size: 1.05rem;
    color: #2c3e50;
    margin: 0.25rem 0 0.5rem;
    font-weight: 600;
  }

  .proj-card__descr {
    color: #666;
    line-height: 1.5;
    margin-bottom: 0.75rem;
    font-size: 0.95rem;
  }

  .proj-card__cta {
    display: inline-block;
    margin-top: 0.5rem;
    font-size: 0.9rem;
    color: #346cb0;
    text-decoration: none;
    font-weight: 600;
  }

  .proj-card:hover { transform: translateY(-4px); transition: transform .18s ease; }

  @media (max-width: 768px) {
    .proj-grid { grid-template-columns: repeat(2, minmax(180px,1fr)); }
  }
  @media (max-width: 480px) {
    .proj-grid { grid-template-columns: 1fr; }
  }
  </style>

  <div class="proj-grid" style="--cols: {{ columns | int }};">
    {% for card in cards %}
      <article class="proj-card" aria-label="Projet {{ loop.index }}">
        <div class="proj-card__emoji">{{ card.emoji or 'ðŸŽ“' }}</div>
        <h3 class="proj-card__title">{{ card.title }}</h3>
        <p class="proj-card__descr">{{ card.descr }}</p>
        {% if card.href %}
          <a class="proj-card__cta" href="{{ card.href }}">Voir le projet â†’</a>
        {% endif %}
      </article>
    {% endfor %}
  </div>
{%- endmacro %}