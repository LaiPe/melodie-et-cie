{% macro timeline(steps=[]) -%}
  <style>
  /* ===== PROCESS TIMELINE (scoped) ===== */
  .proc-timeline {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    padding: 2rem;
    margin: 2rem;
    flex-direction: column
  }

  /* horizontal connecting line */
  .proc-timeline::before {
    content: '';
    position: absolute;
    height: 100%;
    width: 6px;
    background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
    border-radius: 4px;
    z-index: 0;
  }

  .proc-card {
    position: relative;
    z-index: 1;
    background: #fff;
    padding: 1.25rem;
    border-radius: 12px;
    box-shadow: 0 6px 20px rgba(0,0,0,0.08);
    width: 220px;
    min-height: 110px;
    text-align: center;
  }

  .proc-card:nth-of-type(odd) {
    left: 9rem;
  }
  .proc-card:nth-of-type(even) {
    right: 9rem;
  }

  .proc-card:not(:last-child) {
    margin-bottom: -2rem;
  }

  .proc-card__step {
    display: inline-block;
    font-size: 0.9rem;
    color: #fff;
    background: linear-gradient(90deg,#667eea,#764ba2);
    padding: 0.3rem 1rem;
    border-radius: 999px;
    margin-bottom: 0.6rem;
  }

  .proc-card__title {
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 0.5rem;
  }

  .proc-card__descr {
    color: #666;
    font-size: 0.95rem;
    line-height: 1.45;
  }

  /* dot that sits on the connecting line */
  .proc-card::after {
    content: '';
    position: absolute;
    top: 50%;
    transform: translate(0, -50%);
    width: 16px;
    height: 16px;
    border-radius: 50%;
    background: linear-gradient(90deg,#ffffff 0%, #ffffff 100%);
    box-shadow: 0 0 0 6px rgba(118,75,162,0.12), 0 2px 6px rgba(0,0,0,0.08);
    z-index: 2;
  }

  .proc-card:nth-of-type(odd)::after {
    left: -2.6rem;
  }
  .proc-card:nth-of-type(even)::after {
    right: -2.6rem;
  }

  /* responsiveness */
  @media (max-width: 560px) {
    .proc-timeline { 
      align-items: stretch; 
      gap: 1.5rem; 
      margin-left: 0;
    }
    .proc-card { 
      width: auto;  
    }
    .proc-card:nth-of-type(n) {
      left: 2.25rem;
      right: 0;
    }
    .proc-card:not(:last-child) {
      margin: 0;
    }
    .proc-card::after { 
      left: -2.6rem;
    }
  }
  </style>

  <div class="proc-timeline">
    {% for step in steps %}
      <article class="proc-card" aria-label="Étape {{ loop.index }}">
        <div class="proc-card__step">Étape {{ loop.index }}</div>
        <div class="proc-card__title">{{ step.title }}</div>
        <div class="proc-card__descr">{{ step.descr }}</div>
      </article>
    {% endfor %}
  </div>
{%- endmacro %}