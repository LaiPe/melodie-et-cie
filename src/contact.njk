<section class="contact-form-section">
    <h2>Formulaire de contact</h2>
    <form class="contact-form" method="get" action="https://portfolio.leopeyronnet.fr/redirect">
        <div class="form-group">
        <label for="name">Nom et prénom</label>
        <input type="text" id="name" name="name" required>
        </div>
        <div class="form-group">
        <label for="email">Adresse e-mail</label>
        <input type="email" id="email" name="email" required>
        </div>
        <div class="form-group">
        <label for="reason">Raison du contact</label>
        <select id="reason" name="reason" required>
            <option value="">-- Sélectionnez une raison --</option>
            <option value="question">Question générale</option>
            <option value="inscription">Demande d'inscription</option>
            <option value="cours">Renseignement sur les cours</option>
            <option value="evenement">Organisation d'événement</option>
            <option value="partenariat">Proposition de partenariat</option>
            <option value="autre">Autre</option>
        </select>
        </div>
        <div class="form-group">
        <label for="message">Votre message</label>
        <textarea id="message" name="message" rows="5" required></textarea>
        </div>
        <button type="submit" class="btn">Envoyer</button>
    </form>
</section>
